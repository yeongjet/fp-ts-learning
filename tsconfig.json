{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "declaration": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "rootDir": "./src",
        "outDir": "./lib",
        "lib": ["es2017", "dom"],
        "baseUrl": "./src",
        "paths": {
            "@common/*": [ "common/*" ]
        }
    },
    "exclude": ["node_modules"]
}
